{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "moduleFileExtensions": ["js", "jsx", "ts", "tsx", "json", "node"],
  "transform": {
    "^.+\\.css$": "jest-transform-css",
    "^.+\\.(js|jsx|ts|tsx)$": "ts-jest"
  },
  "setupFilesAfterEnv": ["<rootDir>/src/setupTests.ts"],
  "testMatch": ["<rootDir>/src/**/*.(test|spec).(ts|tsx|js)"],
  "collectCoverageFrom": [
    "src/**/*.(ts|tsx)",
    "!src/**/*.d.ts",
    "!src/**/index.ts"
  ]
}